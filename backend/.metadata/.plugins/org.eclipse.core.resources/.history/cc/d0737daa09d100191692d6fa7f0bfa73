package com.njh.app.nbacontracts.model;

import java.util.HashMap;

import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.Id;

import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Data;
import lombok.NoArgsConstructor;

@Data
@NoArgsConstructor
@AllArgsConstructor
@Builder
@Entity
public class PlayerContract {
	
	private static int playerCount;
	
	@Id
	@GeneratedValue
	private Long id;
	private String name;
	private int age;
	private String link;
	private HashMap<String, Integer> contract;
	private HashMap<String, String> contractStr;
	private int guaranteed;
	private String guaranteedStr;
	
	public PlayerContract(String name, String link, HashMap<String, String> contracts, String guaranteed) {	
		this.name = name;
		this.link = link;
		this.contractStr = contracts;
		this.guaranteedStr = guaranteed;
		playerCount++;
	}
}